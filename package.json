  "bugs": {
    "url": "https://github.com/danitseitlin/cli-argument-parser/issues"
  },
  "homepage": "https://github.com/danitseitlin/cli-argument-parser#readme",
  "dependencies": {
    "file-exists": "5.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/file-exists": "4.0.0",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.11.8",
    "chai": "^4.2.0",
    "mocha": "^9.0.1",
    "npm-package-deployer": "^0.5.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
